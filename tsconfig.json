{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
          "styled-native-components": ["./index"],
          "styled-native-components/native": ["./native"],
        },
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "types": [ "node", "react-native", "jest" ]
    }
}
